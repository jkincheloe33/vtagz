@import '@/styles/breakpoints.styl'

.drag-drop
  border-radius 12px
  overflow hidden
  position relative
.drag-drop-loading
  align-items center
  background-color rgba(0, 0, 0, 0.75)
  display flex
  flex-direction column
  height 100%
  justify-content center
  left 0
  position absolute
  top 0
  width 100%
  z-index 1
  .drag-drop-progress-bar
    background-color var(--neutral-02)
    border-radius 8px
    height 8px
    overflow hidden
    transform translateY(45px)
    width 150px
    .drag-drop-progress
      background-color var(--secondary-04)
      height 100%
      left -100%
      position relative
      width 100%
.drag-drop-upload
  background-color var(--neutral-02)
  cursor pointer
  display flex
  justify-content center
  padding 76px 0
  &.loading
    opacity 0
    pointer-events none
  &.has-image
    border-radius 12px
    display inline-block
    padding 12px 20px
    p
      font-size 15px
      font-weight 700
      margin 0
.drag-drop-cta
  align-items center
  border-radius 12px
  box-shadow 0px 12px 13px -6px rgba(0, 0, 0, 0.04)
  display flex
  padding 16px 20px
  img
    margin-right 11px
  p
    font-size 15px
    font-weight 700
    margin 0
.edit-images
  display grid
  grid-gap 12px
  grid-template-columns 1fr 1fr 1fr 1fr
  margin-bottom 12px
  @media (max-width: $large-desktop-breakpoint)
    grid-template-columns 1fr 1fr 1fr
  @media (max-width: $desktop-breakpoint)
    grid-template-columns 1fr 1fr
  @media screen and (max-width: $small-mobile-breakpoint)
    grid-template-columns 1fr
  .drag-drop-image-wrapper
    position relative
    @media screen and (max-width: $small-mobile-breakpoint)
      max-height 200px
      max-width 200px
    &.single
      max-height 200px
      max-width 200px
    .drag-drop-x
      background-color var(--neutral-03)
      border-radius 50%
      cursor pointer
      display flex
      height 36px
      padding 12px
      position absolute
      right 8px
      top 8px
      width 36px
      img
        width 100%
  .drag-drop-image
    aspect-ratio 1 / 1
    border-radius 16px
    object-fit cover
    overflow hidden
    width 100%
.drag-drop-remove
  background none
  border none
  color var(--primary-03)
  font-size 15px
  font-weight 700
  margin 0
  padding 12px 36px

#drag-drop-error
  margin 0
  padding-top 8px
  text-align center
