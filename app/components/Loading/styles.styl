.loading
  display flex
  justify-content center
  align-items center
  align-content center
  flex-wrap wrap
  & .loading-message
    display block
    width 100%
    text-align center
    font-size 1.25rem
  &.loading-overlay
    position fixed
    left 0
    right 0
    top 0
    bottom 0
    z-index 99999
  &.loading-dimmed
    background-color rgba(0, 0, 0, 0.75)
    & .loading-message
      color white
  .spinner
    margin 35vh auto
    width 80px
    height 80px
    position relative
    text-align center
    -webkit-animation sk-rotate 2.0s infinite linear
    animation sk-rotate 2.0s infinite linear
  .spinner-button
    margin 10px 20px
    width 20px
    height 20px
    position relative
    text-align center
    -webkit-animation sk-rotate 2.0s infinite linear
    animation sk-rotate 2.0s infinite linear
  .dot1, .dot2
    width 60%
    height 60%
    display inline-block
    position absolute
    top 0
    background-color #FFF
    border-radius 100%
    -webkit-animation sk-bounce 2.0s infinite ease-in-out
    animation sk-bounce 2.0s infinite ease-in-out
  .dot2
    top auto
    bottom 0
    -webkit-animation-delay -1.0s
    animation-delay -1.0ss
  .black-dot1, .black-dot2
    width 60%
    height 60%
    display inline-block
    position absolute
    top 0
    background-color black
    border-radius 100%
    -webkit-animation sk-bounce 2.0s infinite ease-in-out
    animation sk-bounce 2.0s infinite ease-in-out
  .black-dot2
    background-color #294dff
    top auto
    bottom 0
    -webkit-animation-delay -1.0s
    animation-delay -1.0s

@keyframes sk-rotate { 100% { transform: rotate(360deg); -webkit-transform: rotate(360deg) }}
@keyframes sk-bounce {
  0%, 100% {
    transform scale(0.0);
    -webkit-transform scale(0.0);
  } 50% {
    transform scale(1.0);
    -webkit-transform scale(1.0);
  }
}
