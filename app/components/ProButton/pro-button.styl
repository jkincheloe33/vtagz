@import '@/styles/breakpoints.styl'

.pro-button
  align-items center
  background-color var(--neutral-02)
  border-radius 12px
  cursor pointer
  display flex
  gap 12px
  padding 12px 24px 12px 12px
  transition background-color 250ms ease
  @media (max-width: $mobile-breakpoint)
    width 100%
  &:hover
    background-color var(--secondary-04-25)
  .pro-icon
    background-color var(--neutral-00)
    border-radius 50%
    height 64px
    flex 0 0 64px
    padding 22px
    width 64px
    img
      width 100%
  p
    margin-bottom 4px
  .pro-detail
    color var(--neutral-04-75)
    font-size 13px
  .pro-detail.draft,
  .pro-detail.active,
  .pro-detail.inactive
    border-radius 4px
    color var(--neutral-06)
    font-weight 700
    padding 4px 6px
    text-transform capitalize
  .pro-detail.draft
    background-color var(--neutral-03)
  .pro-detail.active
    background-color var(--primary-02-25)
  .pro-detail.inactive
    background-color var(--primary-03-25)