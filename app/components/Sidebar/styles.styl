.sidebar
  display flex
  flex 0 0 24%
  flex-direction column
  padding 133px 24px 32px
  @media (max-width: 900px)
    flex 0 0 100%
    transform translateX(-100%)
    transition transform 350ms cubic-bezier(0.67, 0, 0.37, 0.99)
    &.show-menu
      transform translateX(0)
  .sidebar-avatar
    margin-bottom 16px
    @media (min-width 901px)
      display none
  .help
    align-items center
    display flex
    border-top 2px solid var(--neutral-02)
    padding 24px 12px 0
    a
      color var(--neutral-04)
      flex 1
      font-size 15px
      font-weight 600
      margin 0 0 0 14px