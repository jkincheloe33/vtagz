#availability
  label.date-picker
    cursor pointer
    display block
    width 100%
    border solid 2px var(--neutral-03)
    border-radius var(--border-radius)
    padding 1rem
    & > div
      display flex
      align-items center
      justify-content flex-start
      gap 1rem
    p
      margin-bottom 0
    .caption-2-medium
      color var(--neutral-04)
    .base-1-semibold
      color var(--neutral-07)
  .react-datepicker-wrapper
    width 100%
    height 0
    display block
    input
      display none
